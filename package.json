{
  "name": "zotero-moment-o7",
  "version": "0.0.3",
  "description": "Archive web resources to prevent link rot. Automatically saves pages to Internet Archive when adding items to Zotero.",
  "main": "bootstrap.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"tests/**/*.ts\" --ignore-pattern \"src/translators/**\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\" \"tests/**/*.ts\" --ignore-pattern \"src/translators/**\"",
    "build": "npm run build:ts && ./scripts/build.sh",
    "build:ts": "webpack --config webpack.config.js",
    "build:watch": "webpack --config webpack.config.js --watch",
    "install-dev": "./scripts/install-dev.sh",
    "release": "./scripts/release.sh",
    "zotero-dev": "./scripts/zotero-dev.sh",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dawsonmv/zotero-moment-o7.git"
  },
  "keywords": [
    "zotero",
    "plugin",
    "archive",
    "internet-archive",
    "link-rot"
  ],
  "author": "Harding Center for Risk Literacy",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/dawsonmv/zotero-moment-o7/issues"
  },
  "homepage": "https://github.com/dawsonmv/zotero-moment-o7#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
